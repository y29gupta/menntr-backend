{
  "name": "menntr-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
  "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --watch src src/index.ts",
  "build": "tsc -p tsconfig.json",
  "start": "node dist/index.js",
  "lint": "eslint \"src/**/*.{ts,js,tsx,jsx}\" || true",
  "lint:fix": "eslint \"src/**/*.{ts,js,tsx,jsx}\" --fix || true",
  "format": "prettier --write \"src/**/*.{ts,js,json,md}\" || true",
  "typecheck": "tsc --noEmit"
},
  "dependencies": {
    "fastify": "^5.6.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
